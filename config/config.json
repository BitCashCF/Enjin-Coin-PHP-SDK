{
	"platform": {
		"name": "My Platform"
	},
	"db": {
		"adapter": "mysqli",
		"database": "enjin_coin",
		"username": "root",
		"password": "root"
	},
	"prices": {
		"max_days": 1095,
		"markets": {
			"ENJ/USD": {
				"push_notifications": false,
				"exchange": "hitbtc"
			},
			"ENJ/BTC": {
				"push_notifications": false,
				"exchange": "hitbtc"
			},
			"ENJ/ETH": {
				"push_notifications": false,
				"exchange": "hitbtc"
			}
		}
	},
	"ethereum": {
		"mode": "geth_ws",
		"path": "ws://localhost:8546"
	},
	"notifications": {
		"method": "pusher",
		"pusher": {
			"app_key": "YOUR_APP_KEY",
			"app_secret": "YOUR_APP_SECRET",
			"app_id": "YOUR_APP_ID",
			"encrypted": false,
			"cluster": "us2"
		}
	},
	"permissions": {
		"guest": {
			"Identities": ["get", "link"],
			"Prices": ["getPrices"]
		},
		"wallet": {
			"Identities": ["get"],
			"Events": ["get"],
			"Prices": ["getPrices"]
		},
		"server": {
			"Identities": ["get", "create", "update"]
		},
		"admin": "*"
	}
}
